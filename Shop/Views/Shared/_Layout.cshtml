<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @*this conditional fixes some padding issues when switching navigation bars*@
    @if (ViewBag.ShopSection == true)
    {
        @Styles.Render("~/Content/shopCss")
    }
    else
    {
        @Styles.Render("~/Content/mainCss")
    }
    @Scripts.Render("~/bundles/modernizr")

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC:700" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="css/main.css">

</head>

<body>

    <header>
        @*this code block loads a partial view for one of two navigation bars, either
        for portfolio section or shop section*@
        @{ 
            string navigation = ViewBag.Navigation;

            Html.RenderPartial(navigation);
        }
    </header>

    <div class="container body-content">

        <!-- main content goes here -->
        
        @RenderBody()
    </div> <!-- end container -->

    <footer>

        <p class="copyright">&copy; @DateTime.Now.Year - Brian Sachleben</p>
        <div class="social_links">
            <a href="https://www.instagram.com/"><img src="~/svg/Instagram.svg" class="instagram social_media_icons" alt="instagram"></a>
            <a href="https://www.facebook.com/"><img src="~/svg/Facebook.svg" class="facebook social_media_icons" alt="facebook"></a>
            <a href="https://twitter.com/"><img src="~/svg/Twitter.svg" class="twitter social_media_icons" alt="linkedin"></a>
            <a href="https://dribbble.com/"><img src="~/svg/Dribbble.svg" class="dribbble social_media_icons" alt="dribbble"></a>
            <a href="#"><img src="~/svg/email.svg" class="email social_media_icons" alt="email"></a>
        </div>

    </footer>

    <!-- Scripts -->
    
    <script src="js/site_menu.js" type="text/javascript"></script>
    <script src="js/img_gallery.js" type="text/javascript"></script>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/js")
        @RenderSection("scripts", required: false)
    
    <!-- end Scripts -->

</body>

</html>